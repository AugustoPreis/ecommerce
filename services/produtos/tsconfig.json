{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}